<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 标题容器 -->
    <style name="TiTleLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/bg_title</item>
    </style>

    <!-- 标题文字样式 -->
    <style name="Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/font_title</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 标题返回按钮 -->
    <style name="TitleBackButton">
        <item name="android:src">@drawable/public_login_btn_back_selector</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
